- marks.each do |mark_type|
  = review_form.simple_fields_for :marks do |mark_form|
    .span3
      .criteria class="#{'included' if mark_type.included_in_overall}"
        = mark_form.input :value, as: 'hidden', input_html: { value: 1, class: 'review_mark_value' }
        = mark_form.input :mark_type_id, as: 'hidden', input_html: { value: mark_type.id }
        - if mark_type.title == 'noise level'
          .noise.noise_big
            label=mark_type.title.capitalize
            .set_noise
              - 5.times do |i|
                = link_to '','', class: 'set', id: "noise_#{i + 1}"
            .noise_level.noise_1
            .p 1
        - else
          .rating.rating_big
            label.required= mark_type.title.capitalize
            .set_rating
              - 5.times do |i|
                = link_to '','', class: 'rate', data: { mark: i + 1 }
              .overlay
              .bar
              .bg
            .stars
              .stars_overlay
              .stars_bar style="left: 20px;"
              .stars_bg
            .p 1


