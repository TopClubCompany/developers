                  = f.input :email
                li
                  = f.input :password, placeholder: "••••••••••", required: false
                li
                  label= I18n.t('profile.notifications')
                  - UserNotification.by_position.each do |notification|
                    = check_box_tag 'notification', notification.id, @user.user_notification_ids.include?(notification.id)
            .clear
            = f.submit I18n.t('profile.save_changes')
