        javascript:
          $(document).ready(function() {
            function in_array(element, arr) {
              for (i in arr) {
                if (arr[i] == element)
                  return true;
              }
              return false;
            }
            var hash = location.hash.replace(/#?(\w+)/, "$1");
            $('#promo_places div.tab_content').css('display', 'none');
            if (hash.length > 0) {
              aviabled_hases = [];
              $('#promo_places div.tab_content').each(function(index) {
                aviabled_hases.push($('#promo_places div.tab_content').eq(index).attr('id'));
              });
              if (in_array(hash, aviabled_hases)) {
                $('#promo_places #' + hash).css('display', 'block');
                for (i in aviabled_hases) {
                  if (aviabled_hases[i] == hash) {
                    $('#promo_places ul#promo_tabs li').removeClass('active');
                    $('#promo_places ul#promo_tabs li').eq(i).addClass('active');
                  }
                }
              } else {
                $('#promo_places div.tab_content').eq(0).css('display', 'block');
              }
            } else {
              $('#promo_places div.tab_content').eq(0).css('display', 'block');
            }
            $('#promo_places ul#promo_tabs li').click(function() {
              var index = $('#promo_places ul#promo_tabs li').index(this);
              $('#promo_places ul#promo_tabs li').removeClass('active');
              $('#promo_places ul#promo_tabs li').eq(index).addClass('active');
              $('#promo_places div.tab_content').css('display', 'none');
              $('#promo_places div.tab_content').eq(index).css('display', 'block');
            });
          })
